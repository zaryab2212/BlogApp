

{
    "builds": [
      {
        "src": "index.js",
        "use": "@vercel/node"
      },
      {
        "src": "build/**",
        "use": "@vercel/static"
      }
    ],
  
    "routes":[
      {"src": "/auth", "dest":"index.js"
    },
      {"src": "/auth/login", "dest":"index.js"
    },
      {"src": "/auth/(.*)", "dest":"index.js"
    },
   


    {"src": "/post/(.*)", "dest":"index.js"
    },

    {"src": "/", "dest":"build/index.html"
    },
    {"src": "/login", "dest":"build/index.html"
    },
    {"src": "/register", "dest":"build/index.html"
    },
    {"src": "/create-post", "dest":"build/index.html"
    },
    {"src": "/post-edit", "dest":"build/index.html"
    },


    {"src": "/(.+)", "dest":"build/$1"
  }
 

    ]
  }
