{
  "builds": [
    {
      "src": "index.js",
      "use": "@vercel/node"
    },
    {
      "src": "build/**",
      "use": "@vercel/static"
    }
  ],

  "routes": [
    { "src": "/auth", "dest": "index.js" },
    { "src": "/auth/login", "dest": "index.js" },
    { "src": "/auth/create", "dest": "index.js" },

    { "src": "/auth/(.*)", "dest": "index.js" },
    { "src": "/uploads", "dest": "index.js" },
    { "src": "/uploads/(.*)", "dest": "index.js" },

    { "src": "/post", "dest": "index.js" },
    { "src": "/post/create", "dest": "index.js" },
    { "src": "/post/single-post/(.*)", "dest": "index.js" },
    { "src": "/post/post-edit/(.*)", "dest": "index.js" },

    { "src": "/", "dest": "build/index.html" },
    { "src": "/(.+)", "dest": "build/$1" }
  ]
}
